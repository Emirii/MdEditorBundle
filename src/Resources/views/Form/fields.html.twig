{% block markdown_widget %}
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/emiriimdeditor/vendor/editormd/css/editormd.min.css') }}" />
        <script type="text/javascript" src="{{ asset('bundles/emiriimdeditor/vendor/editormd/editormd.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/emiriimdeditor/vendor/editormd/languages/en.js') }}"></script>
        <style>
            #markdown {
                position: relative;
                z-index: 1;
            }
            .editormd-menu>li+li>a {
                margin-left: 0px;
            }
        </style>
        <script type="text/javascript">
            var mdEditor;
            $(function() {
                mdEditor = editormd("markdown-{{ form.vars.id }}", {
                    width: "100%",
                    height: 810,
                    syncScrolling: "single",
                    saveHTMLToTextarea: true,
                    emoji: true,
                    path: "{{ asset('bundles/emiriimdeditor/vendor/editormd/lib/') }}"
                });
            });
        </script>
        <div id="markdown-{{ form.vars.id }}"><textarea {{ block('widget_attributes') }}>{{ value }}</textarea></div>
{% endblock %}
