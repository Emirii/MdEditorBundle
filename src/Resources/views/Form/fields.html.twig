{% block markdown_widget %}
    {% spaceless %}
        <link rel="stylesheet" href="{{ asset('bundles/emiriimdeditor/vendor/editormd/css/editormd.min.css') }}" />
        <script src="{{ asset('bundles/vendor/editormd/emiriimdeditor/editormd.min.js') }}"></script>
        <script src="{{ asset('bundles/vendor/editormd/emiriimdeditor/languages/en.js') }}"></script>
        <style>
            #markdown {
                position: relative;
                z-index: 1;
            }
            .editormd-menu>li+li>a {
                margin-left: 0px;
            }
        </style>
        <script type="text/javascript">
            var mdEditor;
            $(function() {
                mdEditor = editormd("markdown", {
                    width: "100%",
                    height: 810,
                    syncScrolling: "single",
                    saveHTMLToTextarea: true,
                    emoji: true,
                    path: "{{ asset('bundles/emiriimdeditor/vendor/editormd/lib/') }}"
                });
            });
        </script>
        <div id="markdown"><textarea {{ block('widget_attributes') }}>{{ value }}</textarea></div>
    {% endspaceless %}
{% endblock markdown_widget %}
